@model StudentFee
@using (Ajax.BeginForm("StudentFeeCreate", "Payments", new AjaxOptions { UpdateTargetId = "succ", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "form-horizontal", id = "SelectBatch" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Enrollment", htmlAttributes: new { @class = "col-sm-3 control-label", })
        <div class="col-md-9">
            @Html.DropDownList("Enrollment", (IEnumerable<SelectListItem>)ViewBag.StudentList, "Select Student", htmlAttributes: new { @class = "" })
        </div>
    </div>
    <div class="form-group form-control-material static required">
        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control used", @placeholder = "Amount", value = "" })
        @Html.Label("Amount")
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}



