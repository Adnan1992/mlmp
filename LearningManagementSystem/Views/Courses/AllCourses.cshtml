@model IEnumerable<Course>
@{
    ViewBag.Title = "Courses";
}

@{Html.RenderAction("AdminNameGet", "Admin"); }

<div class="container">
    <div class="page-section">
        <div class="row">
            <div class="col-md-9 col-lg-9">
                <div class="panel panel-default">
                    <h4 class="page-section-heading">Courses</h4>
                    <hr />
                    <div class="table-responsive">
                        <table class="table v-middle">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="responsive-table-body">
                                @foreach (var item in Model)
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => item.CourseID)
                                    <tr>
                                        <td> @item.Title </td>
                                        <td>
                                            <a title="Edit" class="btn btn-default btn-xs" href="@Url.Action("Edit","Courses",new {id=item.CourseID})" d data-toggle="tooltip" data-placement="top"><i class="fa fa-pencil">Edit</i></a>
                                            <a href="@Url.Action("Delete","Courses",new {id=item.CourseID})" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <i class="fa fa-times"> Delete</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <br />
            </div>
            @{ Html.RenderPartial("~/Views/Admin/_AccountManageBarAdmin.cshtml");}
        </div>
    </div>
</div>
