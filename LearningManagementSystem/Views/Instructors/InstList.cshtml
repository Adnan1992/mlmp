@model IEnumerable<Instructor>
@using LearningManagementSystem.Controllers
@{
    ViewBag.Title = "Instructors";
    //string check = null;
}
<div class="page-section">
    <div class="container">

        <div class="row" data-toggle="isotope">
            @foreach (var item in Model)
            {
                //{
                //    if (item.Biography != null)
                //    {
                //        check = item.Biography.ToString().ToCharArray().Take(60).ToSystemString();
                //    }
                //}
                <div class="item col-xs-12 col-sm-6 col-lg-4">
                    <div class="panel panel-default paper-shadow" data-z="0.5">
                        <div class="panel-heading">
                            <h3 class="panel-title"><a href="@Url.Action("InstructorPublicProfile", "Instructors", new { id = item.UserId })">@item.FullName</a></h3>
                        </div>
                        <div class="panel-body">
                            <div class="media">
                                <div class="media-left">
                                    <a href="@Url.Action("InstructorPublicProfile", "Instructors", new { id = item.UserId })">
                                        @if (item.Image != null)
                                        {
                                            <img src="@Url.Content(item.Image)" style="width:122px; height:122px;" alt="people">
                                        }
                                    </a>
                                </div>
                                <div class="media-body">
                                    @if (item.Biography != null)
                                    {
                                        var c = item.Biography.ToString().ToCharArray().Take(60).ToSystemString();
                                        @c
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer text-right">
                            <a href="@Url.Action("InstructorPublicProfile", "Instructors", new { id = item.UserId })" class="btn btn-sm btn-primary">View profile</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>