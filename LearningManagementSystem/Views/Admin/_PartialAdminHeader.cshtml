@model InstructorViewModels
<div class="parallax overflow-hidden bg-blue-400 page-section third">
    <div class="container parallax-layer" data-opacity="true">
        <div class="media v-middle">
            <div class="media-left text-center">
                <a href="#">
                    @if (Model.Image != null)
                    {
                        <img src="@Url.Content(Model.Image)" alt="" class="img-circle width-70" />
                    }
                </a>
            </div>
            <div class="media-body">
                <h1 class="text-white text-display-1 margin-v-0">@Model.FullName</h1>
                @*<p class="text-subhead"><a class="link-white text-underline" href="website-student-public-profile.html">View public profile</a></p>*@
            </div>
            <div class="media-right">
                <span class="label" style="background-color:#ffd800;border-radius:500px;border:2px solid white;">Admin</span>
            </div>
        </div>
    </div>
</div>
