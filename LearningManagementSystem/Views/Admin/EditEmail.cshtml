@model EmailUpdateViewModel
@{
    ViewBag.Title = "Update Email";
}


@{Html.RenderAction("AdminNameGet"); }

<div class="container">
    <div class="page-section">
        <div class="row">
            <div class="col-md-9">

                <div class="row" data-toggle="isotope" id="courses">
                    <div class="panel panel-default">
                        <h4 class="page-section-heading">Update Information</h4>
                        <hr />
                        <div class="panel-body">
                            @using (Html.BeginForm("EditEmail", "Admin", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group form-control-material static required">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control used", @placeholder = "Your first name", value = "" } })
                                            @Html.LabelFor(model => model.FirstName)
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-control-material static required">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control used", @placeholder = "Your last name", value = "" } })
                                            @Html.LabelFor(model => model.LastName)
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group form-control-material static required">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control used", @placeholder = "Email", value = "" })
                                    @Html.LabelFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                        </div>
                    </div>
                </div>
                <br />
                <br />
            </div>
            @{ Html.RenderPartial("_AccountManageBarAdmin", Model);}
        </div>
    </div>
</div>