@model RegisterAdmin

@{
    ViewBag.Title = "Register Admin";
}


@{Html.RenderAction("AdminNameGet"); }

<div class="container">
    <div class="page-section">
        <div class="row">
            <div class="col-md-9">

                <div class="row" data-toggle="isotope" id="courses">
                    <div class="panel panel-default">
                        <h4 class="page-section-heading">Create New Admin</h4>
                        <hr />
                        <div class="panel-body">
                            @using (Html.BeginForm("RegisterAdmin", "Admin", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group form-control-material static required">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control used", @placeholder = "Your first name", value = "" } })
                                            @Html.LabelFor(model => model.FirstName)
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-control-material static required">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control used", @placeholder = "Your last name", value = "" } })
                                            @Html.LabelFor(model => model.LastName)
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group form-control-material static required">
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control used", @placeholder = "Password", value = "" })
                                            @Html.LabelFor(model => model.Password)
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-control-material static required">
                                            @Html.PasswordFor(model => model.Confirmpassword, new { @class = "form-control used", @placeholder = "Confirm Password", value = "" })
                                            @Html.LabelFor(model => model.Confirmpassword)
                                            @Html.ValidationMessageFor(model => model.Confirmpassword, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group form-control-material static required">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control used", @placeholder = "Email", value = "" })
                                    @Html.LabelFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <div class="form-group form-control-material static required">
                                    @Html.DropDownListFor(model => model.Role, new SelectListItem[]
                                    {
                                        new SelectListItem() {Value="admin",Text="admin" },
                                    }, "Select Role", new { @class = "form-control used" })
                                    @Html.LabelFor(model => model.Role)
                                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                @*<div class="form-group form-control-material static required">
                                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control used", @placeholder = "Contact #", value = "" })
                                    @Html.LabelFor(model => model.ContactNumber)
                                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                                </div>*@
                                <br />
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                        </div>
                    </div>
                </div>
                <br />
                <br />
            </div>
            @{ Html.RenderPartial("_AccountManageBarAdmin", Model);}
        </div>
    </div>
</div>
